{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": [
      "ES2021",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/lib/db": ["./node_modules/@hit/feature-pack-stubs/dist/db"],
      "@/lib/hit-config.generated": ["./node_modules/@hit/feature-pack-stubs/dist/hit-config"],
      "@/lib/feature-pack-schemas": ["./src/lib-stubs/feature-pack-schemas"]
    },
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
